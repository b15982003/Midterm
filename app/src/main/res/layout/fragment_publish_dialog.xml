<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".publishDialog.PublishDialog">

        <EditText
            android:id="@+id/dialog_text1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/hello_blank_fragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="8dp"
            style="@style/dailogstyle_title"
            />

        <EditText
            android:id="@+id/dialog_text2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/hello_blank_fragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_text1"
            android:layout_margin="8dp"
            style="@style/dailogstyle_title"
            />

        <EditText
            android:id="@+id/dialog_text3"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:gravity="center"
            android:text="@string/hello_blank_fragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_text2"
            android:layout_margin="8dp"
            android:background="@color/colorAccent"
            style="@style/dailogstyle"
            />

        <Button
            android:id="@+id/dialog_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/dialog_text3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="8dp"
            android:text="Button"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>